  "definitions": {
    "Question": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "string",
          "description": "The question to be asked to Bardie."
        }
      },
      "example": {
        "ask": "hi"
      }
    },
    "QuestionWithImage": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "string",
          "description": "The question to be asked to Bardie."
        },
        "image": {
          "type": "string",
          "description": "The url image to be asked to Bardie."
        }
      },
      "example": {
        "ask": "What this image?",
        "image": "https://static9.depositphotos.com/1642482/1149/i/450/depositphotos_11490587-stock-photo-bananas.jpg"
      }
    },
    "AnswerWithImage": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "The response content of the question request."
        },
        "status": {
          "type": "integer",
          "description": "HTTP status code.",
          "example": 200
        },
        "creator": {
          "type": "string",
          "description": "Creator of the response."
        }
      },
      "example": {
        "content": "This a banana",
        "status": 200,
        "creator": "RizzyFuzz"
      }
    },
    "Answer": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "The response content of the question request."
        },
        "status": {
          "type": "integer",
          "description": "HTTP status code.",
          "example": 200
        },
        "creator": {
          "type": "string",
          "description": "Creator of the response."
        }
      },
      "example": {
        "content": "Hi there! How can I help you today?",
        "status": 200,
        "creator": "RizzyFuzz"
      }
    }
  },
