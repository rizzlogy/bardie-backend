        "summary": "Ask a question to Bard",
        "description": "Endpoint for submitting a question to Bardie.",
        "parameters": [
          {
            "name": "Request Body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Question"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Answer"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
