{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Bard API Documentation",
    "description": "Unofficially API documentation for Bard Google AI",
    "contact": {
      "name": "RizzyFuzz",
      "url": "https://www.rizzy.eu.org/",
      "email": "support@rizzy.eu.org"
    }
  },
  "definitions": {
    "Question": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "string",
          "description": "The question to be asked to Bard."
        }
      },
      "example": {
        "ask": "hi"
      }
    },
    "Answer": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "The response content of the question request."
        },
        "status": {
          "type": "integer",
          "description": "HTTP status code.",
          "example": 200
        },
        "creator": {
          "type": "string",
          "description": "Creator of the response."
        }
      },
      "example": {
        "content": "Hi there! How can I help you today?",
        "status": 200,
        "creator": "RizzyFuzz"
      }
    },
    "StatusResponse": {
      "type": "object",
      "properties": {
        "stats": {
          "type": "object",
          "properties": {
            "ping": {
              "type": "string",
              "description": "Server ping time."
            },
            "cpu": {
              "type": "string",
              "description": "Information about the server's CPU."
            },
            "platform": {
              "type": "string",
              "description": "Server operating system platform."
            },
            "arch": {
              "type": "string",
              "description": "Server architecture."
            },
            "memoryRAM": {
              "type": "string",
              "description": "Information about server RAM usage."
            },
            "runtime": {
              "type": "string",
              "description": "Server runtime duration."
            }
          }
        },
        "status": {
          "type": "string",
          "description": "Current server status."
        },
        "creator": {
          "type": "string",
          "description": "Creator of the response."
        }
      },
      "example": {
        "stats": {
          "ping": "0.0073 s",
          "cpu": "Intel(R) Xeon(R) Processor @ 2.50GHz (2x)",
          "platform": "linux",
          "arch": "x64",
          "memoryRAM": "206.42 MB / 1.16 GB",
          "runtime": "5 minutes, 23 seconds"
        },
        "status": "Always On ðŸŸ¢",
        "creator": "RizzyFuzz Â©Vercel Inc."
      }
    }
  },
  "paths": {
    "/api/onstage": {
      "post": {
        "summary": "Ask a question to Bard",
        "description": "Endpoint for submitting a question to Bard.",
        "parameters": [
          {
            "name": "Request Body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Question"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Answer"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
                  "description": "Error message content."
                },
                "status": {
                  "type": "integer",
                  "description": "HTTP status code.",
                  "example": 400
                },
                "creator": {
                  "type": "string",
                  "description": "Creator of the response."
                }
              },
              "example": {
                "content": "Bad Request: No Query Ask Provided",
                "status": 400,
                "creator": "RizzyFuzz"
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
                  "description": "Error message content."
                },
                "status": {
                  "type": "integer",
                  "description": "HTTP status code.",
                  "example": 500
                },
                "creator": {
                  "type": "string",
                  "description": "Creator of the response."
                }
              },
              "example": {
                "content": "Internal Server Error",
                "status": 500,
                "creator": "RizzyFuzz"
              }
            }
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "Get server status",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/StatusResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
                  "description": "Error message content."
                },
                "status": {
                  "type": "integer",
                  "description": "HTTP status code.",
                  "example": 500
                },
                "creator": {
                  "type": "string",
                  "description": "Creator of the response."
                }
              },
              "example": {
                "content": "Internal Server Error",
                "status": 500,
                "creator": "RizzyFuzz"
              }
            }
          }
        }
      }
    }
  }
}
