{
  "swagger": "2.0",
  "openapi": "3.0",
  "info": {
    "version": "1.0.0",
    "title": "Unofficial BardAI API Documentation",
    "description": "Simple API for BardAI to Submit Questions",
    "contact": {
      "name": "RizzyFuzz",
      "url": "https://www.rizzy.eu.org/#contact",
      "email": "support@rizzy.eu.org"
    }
  },
  "components": {
    "schemas": {
      "Question": {
        "type": "object",
        "properties": {
          "ask": {
            "type": "string",
            "description": "The question to be submitted to BardAI."
          }
        },
        "example": {
          "ask": "What is www.wonsacloud.com"
        }
      },
      "Answer": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "The response content from the question request."
          },
          "status": {
            "type": "integer",
            "description": "HTTP status code.",
            "example": 200
          },
          "creator": {
            "type": "string",
            "description": "Response creator."
          }
        },
        "example": {
          "content": "www.wonsacloud.com is the website of Wonsa Cloud, a cloud computing service provider company in Indonesia...",
          "status": 200,
          "creator": "RizzyFuzz"
        }
      },
      "Error400": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "Error message content."
          },
          "status": {
            "type": "integer",
            "description": "HTTP status code.",
            "example": 400
          },
          "creator": {
            "type": "string",
            "description": "Response creator."
          }
        },
        "example": {
          "content": "Bad Request: No Query Ask Provided",
          "status": 400,
          "creator": "RizzyFuzz"
        }
      },
      "Error500": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "Error message content."
          },
          "status": {
            "type": "integer",
            "description": "HTTP status code.",
            "example": 500
          },
          "creator": {
            "type": "string",
            "description": "Response creator."
          }
        },
        "example": {
          "content": "Internal Server Error",
          "status": 500,
          "creator": "RizzyFuzz"
        }
      }
    }
  },
  "paths": {
    "/api/onstage": {
      "post": {
        "summary": "Submit a question to BardAI",
        "description": "Endpoint for submitting a question to BardAI.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Question"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Answer"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error400"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error500"
                }
              }
            }
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "Get server status",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}
