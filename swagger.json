{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Bard API Documentation",
    "description": "API documentation for Bard",
    "contact": {
      "name": "RizzyFuzz",
      "url": "https://www.rizzy.eu.org/#contact",
      "email": "support@rizzy.eu.org"
    }
  },
  "definitions": {
    "Question": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "string",
          "description": "The question to be asked to Bard."
        }
      },
      "example": {
        "ask": "Who is Elon Musk?"
      }
    },
    "Answer": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "The response content of the question request."
        },
        "status": {
          "type": "integer",
          "description": "HTTP status code.",
          "example": 200
        },
        "creator": {
          "type": "string",
          "description": "Creator of the response."
        }
      },
      "example": {
        "content": "Elon Musk is a South African-born American entrepreneur and business magnate who founded X Corporation (formerly X.com), SpaceX, Tesla, Inc., Neuralink, and The Boring Company. As of November 2023, he is the CEO of Tesla, Inc. and SpaceX, angel investor, CEO, and product architect of Tesla, Inc., owner, chairman and CTO of X Corp., founder of the Boring Company, co-founder of Neuralink and OpenAI, and president of the Musk Foundation. He is the wealthiest person in the world, with an estimated net worth of US$231 billion according to Forbes.\n\nMusk is known for his ambitious and often controversial goals, such as colonizing Mars and making electric cars mainstream. He is also a vocal advocate for artificial intelligence and renewable energy.\n\nMusk's companies have had a significant impact on the world. Tesla is the world's leading electric car maker, and SpaceX is the first private company to send astronauts to the International Space Station. Neuralink is developing brain-computer interfaces, and The Boring Company is building tunnels to reduce traffic congestion.\n\nMusk is a polarizing figure, but there is no doubt that he is one of the most influential entrepreneurs of our time. His work is helping to shape the future of transportation, energy, and technology.",
        "status": 200,
        "creator": "RizzyFuzz"
      }
    },
    "StatusResponse": {
      "type": "object",
      "properties": {
        "stats": {
          "type": "object",
          "properties": {
            "ping": {
              "type": "string",
              "description": "Server ping time."
            },
            "cpu": {
              "type": "string",
              "description": "Information about the server's CPU."
            },
            "platform": {
              "type": "string",
              "description": "Server operating system platform."
            },
            "arch": {
              "type": "string",
              "description": "Server architecture."
            },
            "memoryRAM": {
              "type": "string",
              "description": "Information about server RAM usage."
            },
            "runtime": {
              "type": "string",
              "description": "Server runtime duration."
            }
          }
        },
        "status": {
          "type": "string",
          "description": "Current server status."
        },
        "creator": {
          "type": "string",
          "description": "Creator of the response."
        }
      },
      "example": {
        "stats": {
          "ping": "0.0073 s",
          "cpu": "Intel(R) Xeon(R) Processor @ 2.50GHz (2x)",
          "platform": "linux",
          "arch": "x64",
          "memoryRAM": "206.42 MB / 1.16 GB",
          "runtime": "5 minutes, 23 seconds"
        },
        "status": "Always On ðŸŸ¢",
        "creator": "RizzyFuzz Â©Vercel Inc."
      }
    }
  },
  "paths": {
    "/api/onstage": {
      "post": {
        "summary": "Ask a question to Bard",
        "description": "Endpoint for submitting a question to Bard.",
        "parameters": [
          {
            "name": "request",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Question"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Answer"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
                  "description": "Error message content."
                },
                "status": {
                  "type": "integer",
                  "description": "HTTP status code.",
                  "example": 400
                },
                "creator": {
                  "type": "string",
                  "description": "Creator of the response."
                }
              },
              "example": {
                "content": "Bad Request: No Query Ask Provided",
                "status": 400,
                "creator": "RizzyFuzz"
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
                  "description": "Error message content."
                },
                "status": {
                  "type": "integer",
                  "description": "HTTP status code.",
                  "example": 500
                },
                "creator": {
                  "type": "string",
                  "description": "Creator of the response."
                }
              },
              "example": {
                "content": "Internal Server Error",
                "status": 500,
                "creator": "RizzyFuzz"
              }
            }
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "Get server status",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/StatusResponse"
            }
          }
        }
      }
    }
  }
}
