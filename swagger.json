{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Unofficial BardAI API Documentation",
    "description": "Simple API for BardAI to Submit Questions",
    "contact": {
      "name": "RizzyFuzz",
      "url": "https://www.rizzy.eu.org/#contact",
      "email": "support@rizzy.eu.org"
    }
  },
  "definitions": {
    "Question": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "string",
          "description": "The question to be submitted to BardAI."
        },
        "example": "What is www.wonsacloud.com"
      }
    },
    "Answer": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "The response content from the question request."
        },
        "status": {
          "type": "integer",
          "description": "HTTP status code.",
          "example": 200
        },
        "creator": {
          "type": "string",
          "description": "Response creator."
        },
        "example": {
          "content": "www.wonsacloud.com is the website of Wonsa Cloud, a cloud computing service provider company in Indonesia...",
          "status": 200,
          "creator": "RizzyFuzz"
        }
      }
    },
    "Error400": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "Error message content."
        },
        "status": {
          "type": "integer",
          "description": "HTTP status code.",
          "example": 400
        },
        "creator": {
          "type": "string",
          "description": "Response creator."
        },
        "example": {
          "content": "Bad Request: No Query Ask Provided",
          "status": 400,
          "creator": "RizzyFuzz"
        }
      }
    },
    "Error500": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "Error message content."
        },
        "status": {
          "type": "integer",
          "description": "HTTP status code.",
          "example": 500
        },
        "creator": {
          "type": "string",
          "description": "Response creator."
        },
        "example": {
          "content": "Internal Server Error",
          "status": 500,
          "creator": "RizzyFuzz"
        }
      }
    },
    "StatusResponse": {
      "type": "object",
      "properties": {
        "stats": {
          "type": "object",
          "properties": {
            "ping": {
              "type": "string",
              "description": "Ping time to the server."
            },
            "cpu": {
              "type": "string",
              "description": "Server's CPU information."
            },
            "platform": {
              "type": "string",
              "description": "Server's operating system platform."
            },
            "arch": {
              "type": "string",
              "description": "Server's architecture."
            },
            "memoryRAM": {
              "type": "string",
              "description": "Server's RAM usage information."
            },
            "runtime": {
              "type": "string",
              "description": "Server's runtime duration."
            }
          }
        },
        "status": {
          "type": "string",
          "description": "Current server status."
        },
        "creator": {
          "type": "string",
          "description": "Response creator."
        },
        "example": {
          "stats": {
            "ping": "0.0073 s",
            "cpu": "Intel(R) Xeon(R) Processor @ 2.50GHz (2x)",
            "platform": "Linux",
            "arch": "x64",
            "memoryRAM": "206.42 MB / 1.16 GB",
            "runtime": "5 minutes, 23 seconds"
          },
          "status": "Always On ðŸŸ¢",
          "creator": "RizzyFuzz"
        }
      }
    }
  },
  "paths": {
    "/api/onstage": {
      "post": {
        "summary": "Submit a question to BardAI",
        "description": "Endpoint for submitting a question to BardAI.",
        "parameters": [
          {
            "name": "request",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Question"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Answer"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/Error400"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/Error500"
            }
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "Get server status",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/StatusResponse"
            }
          }
        }
      }
    }
  }
}
