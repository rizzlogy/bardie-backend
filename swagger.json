{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Dokumentasi API Bard",
    "description": "Dokumentasi API untuk Bard",
    "contact": {
      "name": "RizzyFuzz",
      "url": "https://www.rizzy.eu.org/#contact",
      "email": "support@rizzy.eu.org"
    }
  },
  "definitions": {
    "Question": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "string",
          "description": "Pertanyaan yang ingin diajukan kepada Bard."
        }
      },
      "example": {
        "ask": "apa itu www.wonsacloud.com"
      }
    },
    "Answer": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "Isi respons dari permintaan pertanyaan."
        },
        "status": {
          "type": "integer",
          "description": "Kode status HTTP.",
          "example": 200
        },
        "creator": {
          "type": "string",
          "description": "Pembuat respons."
        }
      },
      "example": {
        "content": "www.wonsacloud.com adalah situs web dari Wonsa Cloud, sebuah perusahaan penyedia layanan cloud computing di Indonesia...",
        "status": 200,
        "creator": "RizzyFuzz"
      }
    },
    "StatusResponse": {
      "type": "object",
      "properties": {
        "stats": {
          "type": "object",
          "properties": {
            "ping": {
              "type": "string",
              "description": "Lama waktu ping ke server."
            },
            "cpu": {
              "type": "string",
              "description": "Informasi tentang CPU server."
            },
            "platform": {
              "type": "string",
              "description": "Platform sistem operasi server."
            },
            "arch": {
              "type": "string",
              "description": "Arsitektur server."
            },
            "memoryRAM": {
              "type": "string",
              "description": "Informasi tentang penggunaan RAM server."
            },
            "runtime": {
              "type": "string",
              "description": "Waktu runtime server."
            }
          }
        },
        "status": {
          "type": "string",
          "description": "Status server saat ini."
        },
        "creator": {
          "type": "string",
          "description": "Pembuat respons."
        }
      },
      "example": {
        "stats": {
          "ping": "0.0073 s",
          "cpu": "Intel(R) Xeon(R) Processor @ 2.50GHz (2x)",
          "platform": "linux",
          "arch": "x64",
          "memoryRAM": "206.42 MB / 1.16 GB",
          "runtime": "5 minutes, 23 seconds"
        },
        "status": "Always On ðŸŸ¢",
        "creator": "RizzyFuzz Â©Vercel Inc."
      }
    }
  },
  "paths": {
    "/api/onstage": {
      "post": {
        "summary": "Menanyakan pertanyaan kepada Bard",
        "description": "Endpoint untuk mengajukan pertanyaan kepada Bard.",
        "parameters": [
          {
            "name": "request",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Question"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Answer"
            }
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "Mengambil hasil status",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/StatusResponse"
            }
          }
        }
      }
    }
  }
}
